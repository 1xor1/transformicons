---
basename: builder
title: Transformicons Builder
description: Animated symbols and buttons custom builder for Sass & CSS
---
<h2>Builder</h2>
<form action="#" id="tcon-builder" role="form">
  <div class="tcons-build-opts">
    <fieldset>
      <legend>Icons</legend>

      <h3 class="tcon-builder__options-title">Menu</h3>

      <ul class="tcons-items list-reset">
        <li>
          <label for="tcon-menu--butterfly">
            <input class="tcon-builder-input" id="tcon-menu--butterfly" type="checkbox" data-transform="menu=xbutterfly" checked> Menu to X <small>(Butterfly Style)</small>
          </label>
        </li>

        <li>
          <label for="tcon-menu--minus">
          <input class="tcon-builder-input" id="tcon-menu--minus" type="checkbox" data-transform="menu=minus"> Menu to Minus
          </label>
        </li>
      </ul>

      <h3 class="tcon-builder__options-title">Grid</h3>
      <ul class="tcons-items list-reset">
        <li>
          <label for="tcon-grid--collapsex">
          <input class="tcon-builder-input" id="tcon-grid--collapsex" type="checkbox" data-transform="grid=collapse"> Collapse to X
          </label>
        </li>
        <li>
          <label for="tcon-grid--rearrangex">
          <input class="tcon-builder-input" id="tcon-grid--rearrangex" type="checkbox" data-transform="grid=rearrange"> Rearrange to X
          </label>
        </li>
      </ul>

      <h3 class="tcon-builder__options-title">Add/Rm</h3>
      <ul class="tcons-items list-reset">
        <li>
          <label for="tcon-addrm--plusminusfold">
            <input class="tcon-builder-input" id="tcon-addrm--plusminusfold" type="checkbox" data-transform="plus=minusfold"> Plus to Minus <small>(Fold Style)</small>
          </label>
        </li>
        <li>
          <label for="tcon-addrm--plusminusrotate">
            <input class="tcon-builder-input" id="tcon-addrm--plusminusrotate" type="checkbox" data-transform="plus=minusrotate"> Plus to Minus <small>(Rotate Style)</small>
          </label>
        </li>
      </ul>
    </fieldset>

    <fieldset>
      <legend>Output</legend>
      <h3 class="tcon-builder__options-title">Styles</h3>

      <label for="tcon-stylesheet--css">
        <input type="radio" name="tcon_stylesheet" id="tcon-stylesheet--css" value="css" checked> CSS
      </label>

      <label for="tcon-stylesheet--sass">
        <input type="radio" name="tcon_stylesheet" id="tcon-stylesheet--sass" value="scss"> Sass
      </label>

      <h3 class="tcon-builder__options-title">JavaScript</h3>
      <label for="tcon-stylesheet--jsmin">
        <input type="radio" name="tcon_javascript" id="tcon-stylesheet--jsmin" value="minified=true" checked> Minified
      </label>

      <label for="tcon-stylesheet--jsunmin">
        <input type="radio" name="tcon_javascript" id="tcon-stylesheet--jsunmin" value="minified=false"> Unminified
      </label>
    </fieldset>
  </div>

  <input type="submit" class="tcon-btn" value="Build">
</form>

<div id="tcon-source">
  <div class="tcon-tabs">
    <h3>Markup</h3>
    <section class="tcon-tabs__group">
      <div>
        <textarea id="tcon-source__html"></textarea>
      </div>
    </section>
  </div>

  <div class="tcon-tabs">
    <h3>Styles</h3>
    <ul class="tcon-tabs__nav clearfix list-reset" data-tabgroup="tcon-styles-build">
      <li><a href="#tcon-css" id="css-tab" class="tcon-tabs__tab active">CSS</a></li>
      <li><a href="#tcon-sass" id="sass-tab" class="tcon-tabs__tab">Sass</a></li>
    </ul>

    <section id="tcon-styles-build" class="tcon-tabs__group">
      <div id="tcon-css">
        <textarea id="tcon-source__styles-css"></textarea>
      </div>
      <div id="tcon-sass">
        <textarea id="tcon-source__styles-sass"></textarea>
      </div>
    </section>
  </div>

  <div class="tcon-tabs">
    <h3>JavaScript</h3>
    <ul class="tcon-tabs__nav clearfix list-reset" data-tabgroup="tcon-js-build">
      <li><a href="#tcon-jsmin" id="jsmin-tab" class="tcon-tabs__tab active">Minified</a></li>
      <li><a href="#tcon-jsunmin" id="jsunmin-tab" class="tcon-tabs__tab">Unminified</a></li>
    </ul>

    <section id="tcon-js-build" class="tcon-tabs__group">
      <div id="tcon-jsmin">
        <textarea id="tcon-source__js-min"></textarea>
      </div>
      <div id="tcon-jsunmin">
        <textarea id="tcon-source__js-unmin"></textarea>
      </div>
    </section>
  </div>
</div>